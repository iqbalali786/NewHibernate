<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.min.hiber.NewHibernate.Product" table="Product">
		<meta attribute="class-description">
			This class contains the product detail.
		</meta>
		<id name="productId" type="int" column="product_id"></id>
		<property name="productName" column="prod_name" type="string" />
		<property name="vendorName" column="prod_vend" type="string" />
		<property name="productPrice" column="prod_price" type="int" />
	</class>
</hibernate-mapping>